void SetUpFavorites()
{
    MSG_WND_DSP();
    MSG( SetUp_Favorites );
    SET_MSG_VAR( 1, GET_COUNT( 24 ), 0 );
    SET_MSG_VAR( 2, GET_COUNT( 25 ), 0 );
    SET_MSG_VAR( 3, GET_COUNT( 26 ), 0 );
