    SET_MSG_VAR( 6, GET_COUNT( 29 ), 0 );
    SEL_DEFKEY( 14, 999 );
    if (isPC = true)
        SEL_DEFKEY( 11, 998 );
    else
        SEL_DEFKEY( 9, 998 );
    int selection = SEL( SelectFavorites );
    if (selection != 998) {
        MSG_WND_CLS();
    }
    switch ( selection )
