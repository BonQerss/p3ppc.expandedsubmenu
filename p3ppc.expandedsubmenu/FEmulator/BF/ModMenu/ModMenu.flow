void ModMenuInit()
{
    isPC = true;
    int FldCurMaj = FLD_GET_MAJOR();
    int FldCurMin = FLD_GET_MINOR();
    keepMenus = true;
    while ( keepMenus )
    {
        SEL_DEFKEY( 14, 999 );
        if (isPC = true)
            SEL_DEFKEY( 11, 5 );
        else
            SEL_DEFKEY( 9, 5 );
        int selection = MSG_SELECT( ModMenuName, ModMenu, 0 );
        switch ( selection )
        {
            case 999://Cancel
                // CallOriginalSquareMenu();
                return;
            case 0://Use original square function
                CallOriginalSquareMenu();
                keepMenus = false;
                break;
            case 1://Player
                PlayerEditorDisplay();
                break;
            case 2://Battle Select
                CallBattle();
                break;
            case 3://Sound Test
                int bgmId = SelectNumberPrompt( SelectBgmDialog, 5 );
                if (bgmId != -1)
                    BGM( bgmId );
                break;
            case 4://Field Select
                FieldSelect();
                break;
            case 5://Next Page
                ModMenuPage2();
                break;
        }
    }
}

