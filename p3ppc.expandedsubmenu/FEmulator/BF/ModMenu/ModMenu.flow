        else
            SEL_DEFKEY( 9, 4 );
        int selection = MSG_SELECT( ModMenuName, PlayerMenu, 0 );
        switch ( selection )
        {
            case 999: // Cancel
                return;
            case 0: // Evolve party member persona
                int unit = SelectUnitNoProtag();
                if ( unit != -1 )
                    PERSONA_EVOLUTION( unit );
                break;
            case 1: // Social Stats
