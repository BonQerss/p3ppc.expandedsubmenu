void executeFunctions(int SLink, int first, int second, int third)
{
    switch(first)
    {
        case 0:
            EVT_FUNCTION_000C(1, SLink);
            break;
        case 1:
            EVT_FUNCTION_0007(SLink);
            break;
        case 2:
            CMM_SET_LV(SLink, CMM_GET_LV(SLink) + 1, 9999);
            break;
    }
    if (CMM_GET_LV(7) == 6) return;

    switch(second)
    {
        case 0:
            EVT_FUNCTION_000C(1, SLink);
            break;
        case 1:
            EVT_FUNCTION_0007(SLink);
            break;
        case 2:
            CMM_SET_LV(SLink, CMM_GET_LV(SLink) + 1, 9999);
            break;
    }
    if (CMM_GET_LV(7) == 6) return;

    switch(third)
    {
        case 0:
            EVT_FUNCTION_000C(1, SLink);
            break;
        case 1:
            EVT_FUNCTION_0007(SLink);
            break;
        case 2:
            CMM_SET_LV(SLink, CMM_GET_LV(SLink) + 1, 9999);
            break;
    }
}
void SLinkDisplay()
{
    int SLink = SelectSLink();
    if (SLink != -1)
    {
		EVT_FUNCTION_000C( 0, SLink ); // Setting to 0 or 1 does absolutely nothing that I can tell, setting to anything higher causes a game crash
        CMM_SET_LV( SLink, ( CMM_GET_LV(SLink) + 1 ), 9999 ); // Unsure of what the 3rd param does, seemingly useless as the function is purely visual.
