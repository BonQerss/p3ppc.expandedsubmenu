                    break;
                case 2:
                    FADE(FadeEffects.CircleWipe, 20);
                    FUNCTION_000F();
                    CALL_FIELD(6, 11, 1, 0);
                    break;
                case 3:
                    FADE(FadeEffects.CircleWipe, 20);
                    FUNCTION_000F();
                    CALL_FIELD(6, 0x10, 1, 0);
                    break;
                case 4:
                    FADE(FadeEffects.CircleWipe, 20);
                    FUNCTION_000F();
                    CALL_FIELD(6, 20, 0, 0);
                    break;
                case 5:
                    FADE(FadeEffects.CircleWipe, 20);
                    FUNCTION_000F();
                    CALL_FIELD(6, 4, 2, 0);
                    break;
                case 6:
                    FADE(FadeEffects.CircleWipe, 20);
                    FUNCTION_000F();
                    CALL_FIELD(6, 3, 0, 0);
                    break;
                case 7:
                    FADE(FadeEffects.CircleWipe, 20);
                    FUNCTION_000F();
                    CALL_FIELD(6, 5, 0, 0);
                    break;
                case 8:
