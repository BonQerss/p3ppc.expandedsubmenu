    case 5:
        mapMask = mapMask + 58;
        break;
}


SEL_DEFKEY( 14, 6);
int map = MSG_SELECT( QuickTravelPlus_Text, MAP_SHOTCUTSEL, mapMask );

switch ( map )
{
