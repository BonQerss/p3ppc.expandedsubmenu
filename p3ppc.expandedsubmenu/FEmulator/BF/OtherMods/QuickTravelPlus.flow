            CALL_FIELD(6, 2, 1, 0);
            break;
        case 9:
            SEL_DEFKEY(PadButton.Circle, 12);
            int school2 = MSG_SELECT(QuickTravelPlus_Text, SCHOOL_QTSEL, schoolMaskP2);
            switch (school2) {
                case 0:
                    FADE(FadeEffects.CircleWipe, 20);
                    FUNCTION_000F();
