            FUNCTION_000F();
            CALL_FIELD(6, 3, 0, 0);
            break;
        case 7:
            FADE(FadeEffects.CircleWipe, 20);
            FUNCTION_000F();
            CALL_FIELD(6, 5, 0, 0);
            break;
        case 8:
            FADE(FadeEffects.CircleWipe, 20);
