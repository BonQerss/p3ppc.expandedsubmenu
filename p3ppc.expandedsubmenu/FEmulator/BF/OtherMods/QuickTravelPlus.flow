void ElseWhere()
{

int CurFldMajor = FLD_GET_MAJOR();
int CurFldMinor = FLD_GET_MINOR();
int dayTime = FUNCTION_0033();

int mapMask = 0;

switch ( CurFldMajor )
{
    case 0: // School
        mapMask = mapMask + 1;
        break;
    case 1: // Dorm
        mapMask = mapMask + 2;
        break;
    case 2: // Paulownia Mall
        mapMask = mapMask + 4;
        break;
    case 3: // Strip Mall
        mapMask = mapMask + 8;
        break;
    case 4: // Port Island Station
        mapMask = mapMask + 16;
        break;
    case 5: // Shrine
        mapMask = mapMask + 32;
        break;
}

switch ( dayTime )
{
    case 0:
        mapMask = mapMask + 0;
        break;
    case 3:
        mapMask = mapMask + 1;
