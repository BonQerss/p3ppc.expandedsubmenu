import("../ModMenu/ModMenu.flow");
import("../Setup/FirstTimeSetup.flow");
import("Tartarus.msg");

void tartarus_shortcut() {
    if (!BIT_CHK(6320)) {
        FirstTimeSetup();
    }

    if (BIT_CHK(5680))
    {
        ModMenuInit();
    }
    else {
        OG_SM_CALL:
        shortcut_select();
    }
}

void shortcut_select() {
    SEL_DEFKEY(PadButton.Circle, 98); // Back & Cancel
    SEL_DEFKEY(PadButton.Triangle, 99); // Triangle && Configure
    int selection = MSG_SELECT(FLD_ORDER, TARTAROS_SHORTCUT, create_tartarus_mask());
    if (selection == 0) {
        HIT_SCRIPT_03();
    }
    else if ( selection == 1) {
        HIT_SCRIPT_02();
    }
    else if ( selection == 2 ) {
        HIT_SCRIPT_01();
    }
    else if ( selection == 3 ) {
        HIT_SCRIPT_00();
    }
    else if (selection == 4) {
        CALL_CALENDAR();
    }
    else if (selection == 5) {
        FADE(FadeEffects.FadeOut, 10);
        SAVE_MENU();
        FUNCTION_000D(0);
    }
    else if (selection == 6) {
        ModMenuInit();
    }
    else if (selection == 99) {
        MenuOptions();
    }
}

int create_tartarus_mask() {

    int mask = MaskCalc( 7 );

    mask -= Power( 2, 0 );
    mask -= Power( 2, 1 );
    mask -= Power( 2, 3 );

    if ( !BIT_CHK( 3373 ) )
    {
        mask -= Power( 2, 2 );
    }

    if (BIT_CHK(6323)) { // View Calendar
        mask -= Power( 2, 4 ); 
    }
    if (BIT_CHK(6326)) { // Save Anywhere
        if ( !BIT_CHK(6321)) {
        mask -= Power( 2, 5 );  
        }
    }
    if (BIT_CHK(6321)) { // Mod Menu
        mask -= Power( 2, 6 );
    }

    return mask;
}
