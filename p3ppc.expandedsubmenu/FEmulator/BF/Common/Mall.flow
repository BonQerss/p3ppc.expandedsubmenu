void mall_shortcut() {
    if (!BIT_CHK(6320)) {
        FirstTimeSetup();
    }

    CurFldMinor = FLD_GET_MINOR(); // defined by QuickTravelPlus.flow

    SEL_DEFKEY(PadButton.Circle, 98); // Cancel button on ○
    SEL_DEFKEY(PadButton.Triangle, 99); // Configure menu on △
    if (BIT_CHK(5680))
    {
        ModMenuInit();
    }
    else {
        OG_SM_CALL:
        shortcut_select(MSG_SELECT(FLD_ORDER, MALL_SHORTCUT_SEL, create_mall_mask()));
    }
}

void shortcut_select(int selection) {
    if (selection <= 6) {
        FADE(FadeEffects.CircleWipe, 20);
        FUNCTION_000F();
        switch (selection) {
            case 0:
                BIT_ON( 5127 );
                CALL_WEAPON_SHOP();
                BIT_OFF( 5127 );
                CALL_FIELD( 8, 1, 4, 0 );
                return;
            case 1: // Pharmacy
                BIT_ON( 5127 );
                CALL_ITEM_SHOP();
                BIT_OFF( 5127 );
                CALL_FIELD( 8, 1, 8, 0 );
                return;
            case 2: 
                CALL_FIELD(7, 4, 0, 0);
                return;
            case 3:
                FADE( 3, 20 );
                FUNCTION_001E( 3, 3 );
                CALL_FIELD( 8, 2, 0, 0 );
                return;
            case 4:
                if ( BIT_CHK( 29 ) && CHK_DAYS_STARTEND( 4, 22, 1, 31 ) )
                {
                    FADE( 3, 20 );
                    CALL_FIELD( 8, 10, 1, 0 );
                }
                else {
                    FADE( 3, 20 );
                    CALL_FIELD( 8, 9, 0, 0 );
                }
                return;
            case 5:
                FADE( 3, 20 );
                CALL_FIELD( 8, 1, 1, 0 );
                return;
            case 6:
                FUNCTION_0010( 1, 15, 255, 255, 255 );
                FUNCTION_001E( 3, 8 );
                BIT_ON( 3072 );
                
                if ( BIT_CHK( 312 ) )
                {
                    CALL_FIELD( 8, 18, 0, 0 );
                }
                else 
                {
                    CALL_FIELD( 8, 17, 0, 0 );
                }
                return;
        }
    }
    else if (selection == 7) {
        BIT_ON( 3091 );
        FADE( 3, 20 );
        FLD_SEL_EX( 1 );
    }
    else if (selection == 8) {
        QuickTravelPlus();
    }
    else if (selection == 9) {
        CALL_CALENDAR();
    }
    else if (selection == 10) {
        HangOut();
    }
    else if (selection == 11) {
        FADE(FadeEffects.FadeOut, 10);
        SAVE_MENU();
        FUNCTION_000D(0);
    }
    else if (selection == 12) {
        ModMenuInit();
    }
    else if (selection == 99) {
        MenuOptions();
    }
}

int create_mall_mask() {
    int mask = MaskCalc( 13 );

    if (!BIT_CHK(6322)) { // Quick Travel = OFF
        switch (CurFldMinor) {
            case 1:
                if ( ( GET_DAY( 9, 5 ) && FCL_FUNCTION_001B() ) ) { // Club Escapade Full Moon Mission
                    mask -= Power( 2, 3 );
                }
                else if ( GET_DAY( 4, 22 ) && !BIT_CHK( 257 ) && (FUNCTION_0033() == 3 ) ) { // First Day with Junpei
                    mask -= Power( 2, 0 );
                    mask -= Power( 2, 7 );
                }
                else if ( CHK_DAYS_STARTEND( 3, 1, 3, 5 ) == 1 )
                {
                    mask -= Power( 2, 4 );
                    mask -= Power( 2, 7 );
                }
                else if (FUNCTION_0033() == 5) { // Night Time..... duh.
                    mask -= Power( 2, 3 );
                    mask -= Power( 2, 4 );
                    mask -= Power( 2, 6 );
                    mask -= Power( 2, 7 );
                }
                else { // Hide Club Escapade otherwise
                    mask -= Power( 2, 4 );
                    mask -= Power( 2, 6 );
                    mask -= Power( 2, 7 );
                }
                break;
            case 2:
                mask -= Power( 2, 3 );
                mask -= Power( 2, 4 );
                mask -= Power( 2, 5 );
                mask -= Power( 2, 6 );
                mask -= Power( 2, 7 ); // if in Club Escapade then it's clearly night time so all is unlocked.
                break;
            case 9: // Back Alley (Empty)
                if ( FUNCTION_0033() != 5 )
                {
                    mask -= Power( 2, 5 );
                    mask -= Power( 2, 7 );
                }
                else
                {
                    mask -= Power( 2, 3 );
                    mask -= Power( 2, 5 );
                    mask -= Power( 2, 7 );
                }
                break;
            case 10: // Back Alley (Velvet Room)
                if ( FUNCTION_0033() != 5 )
                {
                    mask -= Power( 2, 5 );
                    mask -= Power( 2, 6 );
                    mask -= Power( 2, 7 );
                }
                else
                {
                    mask -= Power( 2, 3 );
                    mask -= Power( 2, 5 );
                    mask -= Power( 2, 6 );
                    mask -= Power( 2, 7 );
                }
                break;
            default:
                break;
        }
    }
    else {
        mask -= Power( 2, 8 );
        switch (CurFldMinor) {
            default:
                break;
        }
    }
    if (BIT_CHK(6323)) { // View Calendar
        mask -= Power( 2, 9 ); 
    }
    if (BIT_CHK(6325)) { // Find a Friend
        mask -= Power( 2, 10 ); 
    }
    if (BIT_CHK(6326)) { // Save Anywhere
        if ( !BIT_CHK(6321)) {
        mask -= Power( 2, 11 );  
        }
    }
    if (BIT_CHK(6321)) { // Mod Menu
        mask -= Power( 2, 12 );
    }

    return mask;
}